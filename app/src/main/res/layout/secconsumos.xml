<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/euconsalogo"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:src="@drawable/leucpng"
        android:layout_below="@+id/euconsalogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Altas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btaltas" />

    <Button
        android:text="Bajas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btbajas" />

    <Button
        android:text="Modificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btmodificaciones" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvconductor" />

    <TextView
        android:id="@+id/tvconductorglobal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>